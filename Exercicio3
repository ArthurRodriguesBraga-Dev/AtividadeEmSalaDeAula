double nota1, nota2, nota3, media;
Console.WriteLine("Olá usuário.\nAqui iremos calcula a média das provas e verificar se com essa média o aluno foi aprovado ou reprovado");
Console.Write("Digite a nota da primeira nota: ");
nota1 = Convert.ToDouble(Console.ReadLine());
Console.Write("Digite a nota da segunda nota: ");
nota2 = Convert.ToDouble(Console.ReadLine());
Console.Write("Digite a nota da terceira nota: ");
nota3 = Convert.ToDouble(Console.ReadLine());

media = (nota1 + nota2 + nota3) / 3;
    
if (media >= 7)
{
    Console.WriteLine($"Sua média foi {media} e você foi aprovado!");
}
else if (media >= 5 && media < 7)
{
    Console.WriteLine($"Sua média foi {media} e você está de recuperação");
}
else
{
    Console.WriteLine($"Sua média foi {media} e você está reprovado");
}
Console.ReadKey();
